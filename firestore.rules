
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      // Use a simple, direct check against the admin email for performance.
      return request.auth != null && request.auth.token.email == 'admin@reidavsl.com';
    }

    // Helper function to check if a user has been granted access to a specific course.
    function hasCourseAccess(courseId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/courseAccess/$(courseId));
    }
    
    // Helper function to check if a user has accessed any demo content for a specific course
    function hasAnyDemoAccess(userId, courseId) {
        return exists(/databases/$(database)/documents/users/$(userId)/demoAccess/$(courseId));
    }

    // Helper function to determine if a user can interact with lesson content (comment, like, etc.)
    function canInteract(courseId) {
        let course = get(/databases/$(database)/documents/courses/$(courseId)).data;
        return hasCourseAccess(courseId) 
            || isAdmin() 
            || course.isFree == true
            || (course.isDemoEnabled == true && hasAnyDemoAccess(request.auth.uid, courseId));
    }

    // User documents can be read by their owner or an admin.
    // Admins can list all users.
    // Users can only create their own document. Admins can update any user document.
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Course access records can be read by their owner or managed by admins.
    match /users/{userId}/courseAccess/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if isAdmin();
        allow list: if isAdmin();
    }
    
    // Demo access records are user-specific and can only be managed by the user themselves.
    match /users/{userId}/demoAccess/{courseId} {
        allow read, write: if request.auth.uid == userId;
        match /lessons/{lessonId} {
             allow read, write: if request.auth.uid == userId;
        }
    }

    // User progress can be read by the owner or an admin.
    // It can only be written to by the owner.
    match /users/{userId}/progress/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Layout documents can be read by anyone, but only written by admins
    match /layout/{layoutId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Course documents can be listed by any authenticated user if they filter by published status.
    // A single course document can be read if it's published, or if the user is an admin.
    match /courses/{courseId} {
      allow get: if (request.auth != null && resource.data.status == 'published') || isAdmin();
      allow list: if (request.auth != null && request.query.where.get("status", "") == "published") || isAdmin();
      allow write: if isAdmin();
    }
    
    // --- Lesson Engagement Features ---
    match /courses/{courseId}/lessons/{lessonId} {
      
      // Comments, Replies, and Likes can be managed by any user with valid interaction rights.
      match /comments/{commentId} {
        allow list, read, create, update, delete: if canInteract(courseId);

        match /replies/{replyId} {
          allow list, read, create, update, delete: if canInteract(courseId);
        }

        match /likes/{userId} {
          allow list, read, create, delete: if canInteract(courseId);
        }
      }

      // Reactions Subcollection
      match /reactions/{reactionId} {
        allow read, list, write: if canInteract(courseId);
      }
    }


    // Videos can be read by any authenticated user, but only written by admins
    match /videos/{videoId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Clients can be read by any authenticated user, but only written by admins
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Skills can be read by any authenticated user, but only written by admins
    match /skills/{skillId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Contact messages can be created by anyone, but only read/deleted by admins
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false;
    }

    // Premium links can be managed by admins and read by any authenticated user.
    match /premiumLinks/{linkId} {
        allow get: if request.auth != null;
        allow list, create, update, delete: if isAdmin();
    }

    // Audit logs can only be read and created by admins. They cannot be updated or deleted.
    match /auditLogs/{logId} {
      allow read, list, create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
