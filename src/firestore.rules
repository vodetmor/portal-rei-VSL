
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@reidavsl.com';
    }

    // --- User Data ---
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /users/{userId}/courseAccess/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if isAdmin();
        allow list: if isAdmin();
    }

    match /users/{userId}/progress/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- App Content ---
    match /layout/{layoutId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courses/{courseId} {
      allow read: if resource.data.status == 'published' || isAdmin();
      allow list: if resource.data.status == 'published' || isAdmin();
      allow write: if isAdmin();
    }
    
    // --- Lesson Engagement (Public Access) ---
    match /courses/{courseId}/lessons/{lessonId} {
      match /comments/{commentId} {
        allow read, write: if true;
        match /replies/{replyId} {
          allow read, write: if true;
        }
        match /likes/{likeId} {
          allow read, write: if true;
        }
      }

      match /reactions/{reactionId} {
        allow read, write: if true;
      }
    }

    // --- Admin & Other Collections ---
    match /videos/{videoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /skills/{skillId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false;
    }

    match /premiumLinks/{linkId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read, list, create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
