
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      // Use a simple, direct check against the admin email for performance.
      // The get() call is expensive and can fail on list queries.
      return request.auth != null && request.auth.token.email == 'admin@reidavsl.com';
    }

    // Helper function to check if a user has been granted access to a specific course.
    function hasCourseAccess(courseId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/courseAccess/$(courseId));
    }

    // User documents can be read by their owner or an admin.
    // Admins can list all users.
    // Users can only create their own document. Admins can update any user document.
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow user to update their own profile, and admin to update any profile (e.g., change role)
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Course access records can be read by their owner or managed by admins.
    match /users/{userId}/courseAccess/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if isAdmin();
        allow list: if isAdmin();
    }

    // User progress can be read by the owner or an admin.
    // It can only be written to by the owner.
    match /users/{userId}/progress/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Layout documents can be read by anyone, but only written by admins
    match /layout/{layoutId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Courses can be read if:
    // 1. They are published.
    // 2. The user is an admin.
    // 3. The user has a specific access record for this course.
    match /courses/{courseId} {
      allow read: if resource.data.status == 'published' || isAdmin() || hasCourseAccess(courseId);
      allow write: if isAdmin();
    }
    
    // --- Lesson Engagement Features ---
    match /courses/{courseId}/lessons/{lessonId} {

        // Comments Subcollection
        match /comments/{commentId} {
          // Permite list e read para admins ou usuários com acesso ao curso
          allow list, read: if isAdmin() || hasCourseAccess(courseId);
          
          // Criação permitida apenas para usuários com acesso ou admins
          allow create: if (request.auth != null && hasCourseAccess(courseId)) || isAdmin();
          
          // Atualização: admins podem modificar apenas o campo isPinned, usuário pode editar o próprio comentário se tiver acesso
          allow update: if (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isPinned', 'likeCount', 'replyCount']))
                        || (request.auth != null && request.auth.uid == resource.data.userId && hasCourseAccess(courseId));
          
          // Exclusão: usuário pode deletar próprio comentário se tiver acesso ou admin pode deletar qualquer
          allow delete: if (request.auth != null && request.auth.uid == resource.data.userId && hasCourseAccess(courseId))
                        || isAdmin();

          // --- Replies Subcollection ---
          match /replies/{replyId} {
            allow list, read: if isAdmin() || hasCourseAccess(courseId);
            allow create: if (request.auth != null && hasCourseAccess(courseId)) || isAdmin();
            allow update: if (request.auth != null && request.auth.uid == resource.data.userId && hasCourseAccess(courseId)) || isAdmin();
            allow delete: if (request.auth != null && request.auth.uid == resource.data.userId && hasCourseAccess(courseId)) || isAdmin();
          }

          // --- Likes Subcollection ---
          match /likes/{userId} {
            allow list, read: if isAdmin() || hasCourseAccess(courseId);
            allow create, delete: if request.auth != null && request.auth.uid == userId && hasCourseAccess(courseId);
          }
        }

        // Reactions Subcollection
        match /reactions/{reactionId} {
          allow read, list: if isAdmin() || hasCourseAccess(courseId);
          allow write: if isAdmin() || (request.auth.uid == reactionId && hasCourseAccess(courseId));
        }
    }

    // --- Other Collections ---

    // Videos can be read by any authenticated user, but only written by admins
    match /videos/{videoId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Clients can be read by any authenticated user, but only written by admins
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Skills can be read by any authenticated user, but only written by admins
    match /skills/{skillId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Contact messages can be created by anyone, but only read/deleted by admins
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false;
    }

    // Premium links can be managed by admins and read by any authenticated user.
    match /premiumLinks/{linkId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Audit logs can only be read and created by admins. They cannot be updated or deleted.
    match /auditLogs/{logId} {
      allow read, list, create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
