
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@reidavsl.com';
    }

    function hasCourseAccess(courseId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/courseAccess/$(courseId));
    }
    
    function isCourseFree(courseId) {
        let courseDoc = get(/databases/$(database)/documents/courses/$(courseId));
        return courseDoc.data.isFree == true;
    }

    function hasLessonDemoAccess(courseId, lessonId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/demoAccess/$(courseId)/lessons/$(lessonId));
    }

    function hasAnyDemoAccess(userId, courseId) {
      return exists(/databases/$(database)/documents/users/$(userId)/demoAccess/$(courseId));
    }
    
    function canInteract(courseId, lessonId) {
      return hasCourseAccess(courseId) 
          || hasLessonDemoAccess(courseId, lessonId) 
          || isAdmin() 
          || isCourseFree(courseId);
    }

    match /users/{userId} {
      allow read: if (request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if (request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /users/{userId}/courseAccess/{courseId} {
        allow read, list: if (request.auth.uid == userId) || isAdmin();
        allow write: if isAdmin(); // Only admins can grant/revoke access directly
    }
    
    match /users/{userId}/demoAccess/{courseId} {
      allow read, write: if request.auth.uid == userId;
      match /lessons/{lessonId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /users/{userId}/progress/{courseId} {
        allow read: if (request.auth.uid == userId) || isAdmin();
        allow write: if request.auth.uid == userId;
    }
    
    match /layout/{layoutId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courses/{courseId} {
      // Admins can read any course, published or not.
      // Authenticated users can read any PUBLISHED course.
      allow get: if isAdmin() || (request.auth != null && resource.data.status == 'published');
      allow read: if isAdmin() || (request.auth != null && resource.data.status == 'published');
      
      // Admins can list all courses.
      // Authenticated users can list courses ONLY if they filter by status == 'published'.
      allow list: if isAdmin() || (request.auth != null && request.query.where.get("status", "") == "published");
      
      allow write: if isAdmin();
    }
    
    match /courses/{courseId}/lessons/{lessonId} {

      match /comments/{commentId} {
        allow list, read, create, update, delete: if canInteract(courseId, lessonId);

        match /replies/{replyId} {
          allow list, read, create, update, delete: if canInteract(courseId, lessonId);
        }

        match /likes/{userId} {
           allow list, read, create, delete: if canInteract(courseId, lessonId);
           allow update: if false; 
        }
      }

      match /reactions/{reactionId} {
        allow read, list, write: if canInteract(courseId, lessonId);
      }
    }

    match /videos/{videoId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /skills/{skillId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false;
    }

    match /premiumLinks/{linkId} {
        // Any authenticated user needs to be able to read the link to redeem it.
        allow get: if request.auth != null;
        allow read: if request.auth != null;
        allow list, create, update, delete: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read, list, create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
