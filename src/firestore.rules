
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@reidavsl.com';
    }

    function hasCourseAccess(courseId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/courseAccess/$(courseId));
    }
    
    function isCourseFree(courseId) {
        let courseDoc = get(/databases/$(database)/documents/courses/$(courseId));
        return courseDoc.data.isFree == true;
    }

    function hasLessonDemoAccess(courseId, lessonId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/demoAccess/$(courseId)/lessons/$(lessonId));
    }
    
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /users/{userId}/courseAccess/{courseId} {
        allow read, list: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
    
    match /users/{userId}/demoAccess/{courseId}/lessons/{lessonId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/progress/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /layout/{layoutId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courses/{courseId} {
      allow list: if request.auth != null;
      allow read: if isAdmin() || hasCourseAccess(courseId) || isCourseFree(courseId) || resource.data.status == 'published';
      allow write: if isAdmin();
    }
    
    match /courses/{courseId}/lessons/{lessonId} {
      
      // Centralized function to check all valid forms of access.
      function canInteract() {
        return hasCourseAccess(courseId) 
          || hasLessonDemoAccess(courseId, lessonId) 
          || isAdmin() 
          || isCourseFree(courseId);
      }

      match /comments/{commentId} {
        allow list, read, create, update, delete: if canInteract();

        match /replies/{replyId} {
          allow list, read, create, update, delete: if canInteract();
        }

        match /likes/{userId} {
           allow list, read, create, delete: if canInteract();
           allow update: if false; 
        }
      }

      match /reactions/{reactionId} {
        allow read, list, write: if canInteract();
      }
    }

    match /videos/{videoId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /skills/{skillId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false;
    }

    match /premiumLinks/{linkId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read, list, create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
