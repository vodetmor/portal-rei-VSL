
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      // Use a simple, direct check against the admin email for performance.
      return request.auth != null && request.auth.token.email == 'admin@reidavsl.com';
    }

    // Helper function to check if a user has been granted access to a specific course.
    function hasCourseAccess(courseId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/courseAccess/$(courseId));
    }
    
    // Helper function to check if a course is free
    function isCourseFree(courseId) {
        let courseDoc = get(/databases/$(database)/documents/courses/$(courseId));
        return courseDoc.data.isFree == true;
    }
    
    // Helper function to check if a course demo is enabled and the lesson is a demo lesson
    function isDemoLesson(courseId, lessonId) {
        let course = get(/databases/$(database)/documents/courses/$(courseId)).data;
        // This is expensive, but necessary for this rule structure.
        // Consider denormalizing `isDemo` status to the lesson document itself if performance becomes an issue.
        let isLessonInDemoModule = course.modules.filter(m => m.isDemo == true && m.lessons.find(l => l.id == lessonId) != null).size() > 0;
        let isDemoLessonItself = course.modules.flatMap(m => m.lessons).find(l => l.id == lessonId && l.isDemo == true) != null;
        
        return course.isDemoEnabled == true && (isLessonInDemoModule || isDemoLessonItself);
    }

    // User documents can be read by their owner or an admin.
    // Admins can list all users.
    // Users can only create their own document. Admins can update any user document.
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Course access records can be read by their owner or managed by admins.
    match /users/{userId}/courseAccess/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if isAdmin();
        allow list: if isAdmin();
    }

    // User progress can be read by the owner or an admin.
    // It can only be written to by the owner.
    match /users/{userId}/progress/{courseId} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Layout documents can be read by anyone, but only written by admins
    match /layout/{layoutId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Course documents can be listed by any authenticated user.
    // A single course document can be read if it's published and the user is authenticated,
    // or if the user is an admin or has specific access.
    // Write access is restricted to admins.
    match /courses/{courseId} {
      allow list: if request.auth != null;
      allow read: if (isAdmin() || hasCourseAccess(courseId) || isCourseFree(courseId) || (resource.data.status == 'published' && request.auth != null));
      allow write: if isAdmin();
    }
    
    // --- Lesson Engagement Features ---
    match /courses/{courseId}/lessons/{lessonId} {
      
      // Comments, Replies, and Likes can be managed by any user with course access or an admin.
      match /comments/{commentId} {
        allow list, read, create, update, delete: if hasCourseAccess(courseId) || isAdmin() || isCourseFree(courseId) || isDemoLesson(courseId, lessonId);

        match /replies/{replyId} {
          allow list, read, create, update, delete: if hasCourseAccess(courseId) || isAdmin() || isCourseFree(courseId) || isDemoLesson(courseId, lessonId);
        }

        match /likes/{userId} {
          allow list, read, create, delete: if hasCourseAccess(courseId) || isAdmin() || isCourseFree(courseId) || isDemoLesson(courseId, lessonId);
        }
      }

      // Reactions Subcollection
      match /reactions/{reactionId} {
        allow read, list, write: if hasCourseAccess(courseId) || isAdmin() || isCourseFree(courseId) || isDemoLesson(courseId, lessonId);
      }
    }


    // Videos can be read by any authenticated user, but only written by admins
    match /videos/{videoId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Clients can be read by any authenticated user, but only written by admins
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Skills can be read by any authenticated user, but only written by admins
    match /skills/{skillId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Contact messages can be created by anyone, but only read/deleted by admins
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false;
    }

    // Premium links can be managed by admins and read by any authenticated user.
    match /premiumLinks/{linkId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Audit logs can only be read and created by admins. They cannot be updated or deleted.
    match /auditLogs/{logId} {
      allow read, list, create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
