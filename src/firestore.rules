
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin.
    function isAdmin() {
      // Admins have a 'role' field set to 'admin' in their user document.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if a user has been granted access to a specific course.
    function hasCourseAccess(courseId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)/courseAccess/$(courseId));
    }
    
    // Helper function to check if a lesson is part of a demo
    function isLessonDemo(courseId, lessonId) {
        let course = get(/databases/$(database)/documents/courses/$(courseId)).data;
        if (course.isDemoEnabled != true) {
            return false;
        }

        // Iterate through modules and lessons to find the specific lesson and check its demo status.
        let isDemo = false;
        let modules = course.modules; // Direct access to array
        
        // This loop is for security rules, not client code. It's safe.
        for (let i = 0; i < modules.size(); i++) {
            let module = modules[i];
            if (module.lessons != null) { // Check if lessons array exists
                let lessons = module.lessons;
                for (let j = 0; j < lessons.size(); j++) {
                    let lesson = lessons[j];
                    if (lesson.id == lessonId) {
                        // A lesson is a demo if itself is a demo or its parent module is a demo
                        if (module.isDemo == true || lesson.isDemo == true) {
                            isDemo = true;
                        }
                        break; 
                    }
                }
            }
            if (isDemo) {
              break;
            }
        }
        return isDemo;
    }
    
    // Helper function to check if a user has any demo access within a course
    function hasAnyDemoAccess(userId, courseId) {
      return exists(/databases/$(database)/documents/users/$(userId)/demoAccess/$(courseId));
    }

    // Helper function to determine if a user can interact with lesson content.
    function canInteract(courseId, lessonId) {
      let course = get(/databases/$(database)/documents/courses/$(courseId)).data;
      
      return isAdmin() 
          || hasCourseAccess(courseId)
          || (course.isDemoEnabled == true && isLessonDemo(courseId, lessonId));
    }

    // --- COLLECTION RULES ---

    // User documents
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();

      // Subcollections for a user
      match /courseAccess/{courseId} {
          allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
          allow write: if isAdmin(); // Only admins can grant/revoke access directly.
          allow list: if isAdmin();
      }
      
      match /demoAccess/{courseId} {
          allow read, write: if request.auth.uid == userId; // User manages their own demo access.
          match /lessons/{lessonId} {
               allow read, write: if request.auth.uid == userId;
          }
      }

      match /progress/{courseId} {
          allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
          allow write: if request.auth != null && request.auth.uid == userId; // Only user can update their own progress.
      }
    }
    
    // Layout documents can be read by anyone, but only written by admins.
    match /layout/{layoutId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Course documents
    match /courses/{courseId} {
      allow get: if (resource.data.status == 'published' && request.auth != null)
                || isAdmin()
                || hasCourseAccess(courseId);
      
      // Admins can list all courses. Authenticated users can only list published ones.
      allow list: if (isAdmin() || (request.auth != null && request.query.where[0][2] == "published"));
      
      // Only admins can create, update, or delete courses.
      allow write: if isAdmin();

      // --- Lesson Engagement Subcollections ---
      match /lessons/{lessonId} {
        
        match /comments/{commentId} {
          allow read, list, create, update, delete: if canInteract(courseId, lessonId);

          match /replies/{replyId} {
            allow read, list, create, update, delete: if canInteract(courseId, lessonId);
          }

          match /likes/{userId} {
            allow read, list, create, delete: if canInteract(courseId, lessonId);
          }
        }

        match /reactions/{reactionId} {
          allow read, list, write: if canInteract(courseId, lessonId);
        }
      }
    }

    // Premium links can be read by any authenticated user, but only managed by admins.
    match /premiumLinks/{linkId} {
        allow get: if request.auth != null;
        allow list, create, update, delete: if isAdmin();
    }

    // Audit logs can only be read and created by admins.
    match /auditLogs/{logId} {
      allow read, list, create: if isAdmin();
      allow update, delete: if false; // Logs are immutable.
    }
    
    // Other top-level collections (read for all, write for admin)
    match /videos/{videoId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /skills/{skillId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Contact messages can be created by anyone, but only managed by admins.
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
      allow update: if false; // Messages should not be updated.
    }
  }
}
